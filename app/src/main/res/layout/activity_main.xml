<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    tools:context=".loginOrRegister">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="52dp"
        android:layout_marginTop="336dp"
        android:text="Hey there! We are really happy to have you here..."
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="333dp"
        android:layout_height="52dp"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="You can either login if you already have an account, or create an account if you are new here :)"
        android:textColor="#000000" />

    <Button
        android:id="@+id/account"
        android:layout_width="332dp"
        android:layout_height="53dp"
        android:background="@drawable/round2"
        android:text="CREATE AN ACCOUNT"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textView4"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="332dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round2"
        android:shadowColor="#1B0000"
        android:text="Login to an existing account"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView4" />

    <Button
        android:id="@+id/editorLogin"
        android:layout_width="332dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"
        android:layout_marginTop="58dp"
        android:background="@drawable/round2"
        android:text="Login as an editor (Only for editors)"
        android:textColor="#ffffff" />
</RelativeLayout>